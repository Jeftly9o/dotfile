{
"layer": "bottom",
"position": "bottom",
"height": 9,
"margin-bottom":6,
"margin-top":0,
"mod": "dock",
"exclusive": true,
"gtk-layer-shell": true,
"passthrough": false,
"modules-left": ["group/leftSide","tray"],
"modules-center": ["memory","clock","cpu"],
"modules-right":  ["custom/ip","custom/theme","group/rightSide"],
    
"group/leftSide": {
	"orientation": "horizontal",
	"modules": ["hyprland/workspaces"]
},

"group/rightSide": {
	"orientation": "horizontal",
  "spacing":12,
	"modules": ["custom/idle","temperature","battery","custom/powermenu"]
	},


"custom/theme": {
    "format": "ó°»€ ",
"tooltip-format": "pengiun trick",
    "on-click": "~/.config/waybar/scripts/lanzador.sh"
},

"custom/idle":{
    "format": "ó°ˆˆ {}",
    "exec": "pgrep -x hypridle >/dev/null && echo 'On' || echo 'Off'",
    "on-click": "~/.config/waybar/scripts/hypridle.sh",
    "format-alt": "ó°ˆ‰ {}"
},

"cpu": {
  "interval":5,
  "format": "ğŸ§  {usage}%"
},

"clock": {
  "format": "{:L%I:%M %p}",
  "interval": 1,   
  "tooltip-format": "<tt>{calendar}</tt>",
  "smooth-scrolling-threshold": 0.01,
      "calendar": {
        "mode"          : "year",
        "mode-mon-col"  : 3,
        "weeks-pos"     : "right",
        "on-scroll"     : 1,
            "format": {
              "months":     "<span color='#ffead3'><b>{}</b></span>",
              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
              }
            }
  },

"memory": {
  "interval": 5,
  "format": "ó°› {used:0.1f}GB",
  "max-length": 10},

"custom/powermenu": {
    "format": "ï€‘",
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/powermenu.sh"
},

"battery": {
      "format": "{icon} {capacity}%",//"<span color='#a8cd76'>{icon}</span> {capacity}%",
